#include "camera/CameraCommonFlat.idl"

// CameraImage using zero-copy
module rti {
module camera {
module zc {
    @final
    struct Resolution {
        int32 height;
        int32 width;
    };

    @final
    @transfer_mode(SHMEM_REF)
    // Use XCDR2 format so that plain DataWriters can communicate with
    // flat-data DataReaders, which only support XCDR2
    @allowed_data_representation(XCDR2)
    struct CameraImage {
        int64 timestamp;
        int32 format;
        Resolution resolution;
        octet data[common::IMAGE_SIZE];
    };
};  // module zero_copy
};  // module camera
};  // module rti
